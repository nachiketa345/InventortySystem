@page "/inventories"

@using IVS.CoreBusiness;

<h3>InventoryList</h3>
<br>
<ViewInventoriesComponent OnSearchInventories = "OnSearchInventories"></ViewInventoriesComponent>

@if(listInventories!=null)
{
    <table class ="table">
        <thead>
            <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var ivsn in this.listInventories)
            {
                <tr>
                    <td>@ivsn.InventoryName</td>
                    <td>@ivsn.Price.ToString("c")</td>
                    <td>@ivsn.Quantity</td>
                    <td>
                        <button type="button" class="btn btn-light">Edit

                        </button>
                    </td>
                </tr>
            }
        </tbody>

  </table>
}
@code {
    private List<Inventory>? listInventories;

    private void OnSearchInventories(List<Inventory> inventories)
    {
        listInventories = inventories;
    }


}
